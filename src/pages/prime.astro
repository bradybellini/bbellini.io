    { name: "Unsplash", url: "https://unsplash.com/" },
    { name: "Wayback Machine", url: "https://wayback-api.archive.org/" }
  ]
};
---

<RootLayout title="Prime - Personal Start Page">
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <!-- First column -->
    <div class="space-y-4">
      <InfoModule />
      <LinkGroup title="Media" links={linkData.media} />
      <LinkGroup title="Social" links={linkData.social} />
    </div>
    
    <!-- Second column -->
    <div class="space-y-4">
      <LinkGroup title="News" links={linkData.news} />
      <LinkGroup title="Tech" links={linkData.tech} />
      <LinkGroup title="AI" links={linkData.ai} />
    </div>
    
    <!-- Third column -->
    <div class="space-y-4">
      <LinkGroup title="Finance" links={linkData.finance} />
      <LinkGroup title="Personal" links={linkData.personal} />
      <LinkGroup title="Other" links={linkData.other} />
      <UnsplashModule />
    </div>
  </div>
</RootLayout>
