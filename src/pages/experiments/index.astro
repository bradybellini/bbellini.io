---
export const prerender = true; // Static pre-rendering for this page

import RootLayout from "../../layouts/RootLayout.astro";
import LinkGroup from "../../components/LinkGroup.astro";
import TerminalWindow from "../../components/TerminalWindow.astro";

// Define available experiments
const experiments = [
  { name: "Weather", url: "/experiments/weather" }
];
---

<RootLayout title="Experiments | bbellini.io">
  <TerminalWindow 
    title="EXPERIMENTS" 
    titleClass="text-[8px] uppercase"
    contentClass="text-[8px]"
    windowClass="max-w-xl"
  >
    <h2 class="text-xs font-eagle uppercase text-accent border-b border-secondary pb-1 mb-2">EXPERIMENTS</h2>
    <LinkGroup links={experiments} />
  </TerminalWindow>
</RootLayout>
