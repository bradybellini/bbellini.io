---
export const prerender = true; // Static pre-rendering for this page

import RootLayout from "../../layouts/RootLayout.astro";
import UnsplashModule from "../../components/UnsplashModule.astro";
import LinkGroup from "../../components/LinkGroup.astro";
import TerminalWindow from "../../components/TerminalWindow.astro";

// Define links for family/alt page - only Media, Social, News
const linkData = {
  media: [
    { name: "HBOMax", url: "https://www.hbomax.com/" },
    { name: "Peacock", url: "https://www.peacocktv.com/" },
    { name: "Disney+", url: "https://www.disneyplus.com/" },
    { name: "Hulu", url: "https://hulu.com" },
    { name: "Netflix", url: "https://netflix.com" },
    { name: "YouTube", url: "https://youtube.com" },
    { name: "Twitch", url: "https://twitch.tv" }
  ],
  social: [
    { name: "X", url: "https://x.com" }
  ],
  news: [
    { name: "WSJ", url: "https://wsj.com" },
    { name: "Hacker News", url: "https://news.ycombinator.com/" },
    { name: "Techmeme", url: "https://techmeme.com" },
    { name: "Newsblur", url: "https://newsblur.com/" }
  ]
};
---

<RootLayout title="Alt - Family Start Page">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <!-- First column -->
    <div class="space-y-4">
      <TerminalWindow title="MEDIA" titleClass="text-[8px] uppercase" contentClass="text-[8px]" windowClass="w-full">
        <LinkGroup links={linkData.media} />
      </TerminalWindow>
    </div>
    
    <!-- Second column -->
    <div class="space-y-4">
      <TerminalWindow title="SOCIAL" titleClass="text-[8px] uppercase" contentClass="text-[8px]" windowClass="w-full">
        <LinkGroup links={linkData.social} />
      </TerminalWindow>
      <TerminalWindow title="NEWS" titleClass="text-[8px] uppercase" contentClass="text-[8px]" windowClass="w-full">
        <LinkGroup links={linkData.news} />
      </TerminalWindow>
    </div>
    
    <!-- Third column -->
    <div class="space-y-4">
      <UnsplashModule />
    </div>
  </div>
</RootLayout>
