---
// LinkGroup.astro
// Component for organizing bookmarks into categories

interface Link {
  name: string;
  url: string;
}

interface Props {
  links: Link[];
  class?: string;
}

const { links, class: className = "" } = Astro.props;
---

<div class={`links-container ${className}`}>
  {links.map((link) => (
    <div class="link-item">
      <span class="text-accent">$</span>
      <a 
        href={link.url} 
        target={link.url.startsWith('/') ? '_self' : '_blank'}
        rel={link.url.startsWith('/') ? '' : 'noopener noreferrer'}
        class="text-secondary hover:text-accent hover:underline transition-colors font-sharp-alt ml-1"
      >
        {link.name}
      </a>
    </div>
  ))}
</div>

<style>
  .link-item {
    margin-bottom: 0.25rem;
  }
  
  .link-item:last-child {
    margin-bottom: 0;
  }
</style>
